<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetLeft="0dp"
    android:insetTop="0dp"
    android:insetRight="0dp"
    android:insetBottom="0dp">

    <layer-list>
        <!-- Capa intermedia (semi-transparente) -->
        <item>
            <shape android:shape="rectangle">
                <solid android:color="@color/background_10" />
                <corners
                    android:topLeftRadius="0dp"
                    android:topRightRadius="20dp"
                    android:bottomLeftRadius="0dp"
                    android:bottomRightRadius="0dp" />
            </shape>
        </item>

        <!-- Capa interior (opaca) -->
        <item android:top="1dp" android:right="1dp">
            <shape android:shape="rectangle">
                <solid android:color="@color/background" />
                <corners
                    android:topLeftRadius="0dp"
                    android:topRightRadius="20dp"
                    android:bottomLeftRadius="0dp"
                    android:bottomRightRadius="0dp" />
            </shape>
        </item>

        <!-- LÃ­nea fina CORREGIDA: Abajo -->
        <item android:gravity="bottom" android:right="1dp">
            <shape android:shape="rectangle">
                <size android:height="7dp" />
                <solid android:color="@color/primary" />
            </shape>
        </item>

        <item android:gravity="bottom" android:right="1dp">
            <shape android:shape="rectangle">
                <size android:height="2dp" />
                <solid android:color="@color/onBackground" />
            </shape>
        </item>
    </layer-list>
</inset>